@model BO.Pizza

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
            <span><img src="../../assets/piz2.png" width="120px" height="120px" /></span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            Pate :
        </dt>
        <dd class="col-sm-10">
             @Html.DisplayFor(model => model.Pate.Nom)
        </dd>
        <dt class="col-sm-2">
            <p>Ingredients :</p>
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Ingredients)
            {
                <ul>
                    <li>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </li>
                </ul>
            } 
        </dd>
 
    </dl>
</div>
